    <modelVersion>4.0.0</modelVersion>
    <groupId>com.project</groupId>
    <artifactId>simple</artifactId>
    <packaging>jar</packaging>
    <version>1.1-SNAPSHOT</version>

    <scm>
        <connection>scm:git:git@github.com:iustina/projectTest.git</connection>
        <developerConnection>scm:git:git@github.com:iustina/projectTest.git</developerConnection>
  <!--      <url>https://github.com/iustina/projectTest</url>
        <tag>v1.1</tag>-->
